{
  "rules": {
	  "concepts":{
		  ".read": true,
		  ".write": false
	  },
	  "markers":{
		  ".read": true,
		  ".write": false
	  },
	  "users":{
		  "$uid":{
			  "details":{
				  ".read": "auth.uid != null",
				  ".write": "$uid === auth.uid"
			  },
			  "game":{
				  ".read": "auth.uid != null",
				  ".write": "$uid === auth.uid",
				  "$game":{
					  "word":{
						  ".validate": "newData.isString()"
					  },
					  "markers":{
						  "$color":{
							  ".validate":"root.child('markers/colors/'+$color).exists()",
							  "main":{
								  ".validate": "root.child('concepts/'+newData.val()).exists()"
							  },
							  "other":{
								  "$marker_no":{
									  ".validate": "root.child('concepts/'+newData.val()).exists()"
								  }
							  }
						  }
					  }
				  }
			  }
		  }
	  }
  }
}
